<UserControl x:Class="CashCenter.IvEnergySales.DataMigrationControls.CustomerZeusImportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CashCenter.IvEnergySales"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <StackPanel>
        <Label Content="Что импортировать" />
        <ListBox x:Name="lbImportTargets">
            <ListBox.ItemTemplate>
                <HierarchicalDataTemplate>
                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked}"/>
                </HierarchicalDataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Из какого отделения" />
        <local:DepartmentSelectorControl x:Name="controlDepartamentSelector" />
        <Button
            x:Name="btnImportFromDb"
            Content="Импортировать"
            Width="100"
            Height="30"
            Margin="0,5,0,0"
            HorizontalAlignment="Left"
            Click="On_btnImportFromDb_Click"/>
    </StackPanel>
</UserControl>
