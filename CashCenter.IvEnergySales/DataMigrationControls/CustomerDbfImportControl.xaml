<UserControl x:Class="CashCenter.IvEnergySales.DataMigrationControls.CustomerDbfImportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CashCenter.IvEnergySales"
             mc:Ignorable="d">
    <StackPanel>
        <Label Content="Путь к DBF файлу для импорта" />
        <local:FileSelectorControl x:Name="fscCustomersDbfFileSelector" FilesFilter="*.DBF|*.DBF" />
        <Button
            x:Name="btnImportCustomersFromDbf"
            Content="Импортировать"
            Width="100" Height="30"
            Margin="0,5,0,0"
            HorizontalAlignment="Left"
            Click="On_btnImportCustomersFromDbf_Click" />
    </StackPanel>
</UserControl>
