<UserControl x:Class="CashCenter.IvEnergySales.CustomerWaterPaymentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ivenergysales="clr-namespace:CashCenter.IvEnergySales"
             xmlns:converters="clr-namespace:CashCenter.IvEnergySales.Converters"
             xmlns:behaviors="clr-namespace:CashCenter.IvEnergySales.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="Label" x:Key="PropertyLabel">
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Grid.Column" Value="0"/>
        </Style>
        <Style TargetType="Button" x:Key="MainButton">
            <Setter Property="Margin" Value="15,5,15,5"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <converters:CustomerNumberToStringConverter x:Key="CustomerNumberToStringConverter"/>
    </UserControl.Resources>
    <UserControl.DataContext>
        <ivenergysales:CustomerWaterPaymentControlViewModel />
    </UserControl.DataContext>
    <StackPanel>
        <GroupBox Header="Лицевой счет" Height="150">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Content="Номер лицевого счета" Grid.Row="0" Style="{StaticResource PropertyLabel}"/>
                <Grid Grid.Column="1" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Text="{Binding CustomerNumber.Value, Converter={StaticResource CustomerNumberToStringConverter}, UpdateSourceTrigger=PropertyChanged}"
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                             behaviors:TextBoxBehavior.SelectAllTextOnFocus="True"
                             behaviors:TextBoxBehavior.IsFocused="{Binding IsCustomerNumberFocused.Value, Mode=TwoWay}">
                        <TextBox.InputBindings>
                            <KeyBinding Command="{Binding FindCustomerCommand}" Key="Return"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button Grid.Column="1" Content="Поиск" Command="{Binding FindCustomerCommand}"/>
                </Grid>

                <Label Content="Имя плательщика" Grid.Row="1" Style="{StaticResource PropertyLabel}"/>
                <Viewbox Grid.Column="1" Grid.Row="1">
                    <Label Content="{Binding CustomerName.Value}" FontWeight="Bold"
                           HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
                </Viewbox>

                <Label Content="Адрес плательщика" Grid.Row="2" Style="{StaticResource PropertyLabel}"/>
                <Viewbox Grid.Column="1" Grid.Row="2">
                    <Label Content="{Binding CustomerAddress.Value}" FontWeight="Bold"
                           HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
                </Viewbox>

                <Label Content="Адрес эл. почты плательщика" Grid.Row="3" Style="{StaticResource PropertyLabel}"/>
                <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Email.Value}" IsEnabled="{Binding IsPaymentEnable.Value}"
                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" behaviors:TextBoxBehavior.IsTabOnEnter="True"
                         behaviors:TextBoxBehavior.IsFocused="{Binding IsEmailFocused.Value, Mode=TwoWay}"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Оплата" Height="230">
            <StackPanel>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Label Content="Номер счетчика" FontWeight="Bold" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
                    <Label Content="{Binding Counter1Number.Value}" Grid.Row="1" FontWeight="Bold" Style="{StaticResource PropertyLabel}"/>
                    <Label Content="{Binding Counter2Number.Value}" Grid.Row="2" FontWeight="Bold" Style="{StaticResource PropertyLabel}"/>
                    <Label Content="{Binding Counter3Number.Value}" Grid.Row="3" FontWeight="Bold" Style="{StaticResource PropertyLabel}"/>

                    <Label FontWeight="Bold" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <TextBlock TextWrapping="Wrap" Text="Сумма по счетчику"/>
                    </Label>
                    <TextBox Text="{Binding Counter1Cost.Value}" Grid.Column="1" Grid.Row="1"
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                             IsEnabled="{Binding IsPaymentEnable.Value}"
                             behaviors:TextBoxBehavior.SelectAllTextOnFocus="True"
                             behaviors:TextBoxBehavior.IsTabOnEnter="True"/>
                    <TextBox Text="{Binding Counter2Cost.Value}" Grid.Column="1" Grid.Row="2"
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                             IsEnabled="{Binding IsPaymentEnable.Value}"
                             behaviors:TextBoxBehavior.SelectAllTextOnFocus="True"
                             behaviors:TextBoxBehavior.IsTabOnEnter="True"/>
                    <TextBox Text="{Binding Counter3Cost.Value}" Grid.Column="1" Grid.Row="3"
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                             IsEnabled="{Binding IsPaymentEnable.Value}"
                             behaviors:TextBoxBehavior.SelectAllTextOnFocus="True"
                             behaviors:TextBoxBehavior.IsTabOnEnter="True"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>

                    <Label Content="Сумма" Grid.Row="0" Style="{StaticResource PropertyLabel}"/>
                    <Label Content="{Binding TotalCost.Value}" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    
                    <Label Content="Примечание" Grid.Row="1" Style="{StaticResource PropertyLabel}"/>
                    <TextBox Text="{Binding Description.Value}" Grid.Column="1" Grid.Row="1"
                             HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                             IsEnabled="{Binding IsPaymentEnable.Value}"
                             behaviors:TextBoxBehavior.IsTabOnEnter="True"/>

                    <Button Content="Оплатить" Command="{Binding PayCommand}" Grid.Column="0" Grid.Row="2" Style="{StaticResource MainButton}" IsEnabled="{Binding IsPaymentEnable.Value}"/>
                    <Button Content="Очистить" Command="{Binding ClearCommand}" Grid.Column="1" Grid.Row="2" Style="{StaticResource MainButton}" IsEnabled="{Binding IsPaymentEnable.Value}"/>
                </Grid>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
