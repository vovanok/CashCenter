<UserControl x:Class="CashCenter.IvEnergySales.Controls.DbQualifierControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CashCenter.IvEnergySales.Controls"
             mc:Ignorable="d" Width="300" Height="30" Loaded="UserControl_Loaded">
    <Grid>
        <Label x:Name="lblDepartmentName" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Center" Background="Transparent" VerticalContentAlignment="Center" Margin="5 0 0 0"/>
        <ComboBox x:Name="cbDbSelector" VerticalAlignment="Center" Width="150" IsReadOnly="True" HorizontalAlignment="Right" HorizontalContentAlignment="Center" DisplayMemberPath="DbCode" SelectedValuePath="DbCode" Margin="0 0 5 0" SelectionChanged="cbDbSelector_SelectionChanged"/>
    </Grid>
</UserControl>
