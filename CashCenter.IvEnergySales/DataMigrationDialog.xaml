<Window x:Class="CashCenter.IvEnergySales.DataMigrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashCenter.IvEnergySales"
        mc:Ignorable="d"
        Title="DataMigrationDialog" Width="500" SizeToContent="Height" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="5,5,5,5">
        <GroupBox Header="Импорт данных о товарах">
            <StackPanel Margin="5,0,5,0">
                <Label Content="Путь к DBF файлу для импорта" />
                <local:FileSelectorControl FilesFilter="*.DBF|*.DBF" />
                <Button x:Name="btmImportArticles" Content="Импортировать" Width="100" Height="30" Margin="0,5,0,0" Click="btmImportArticles_Click" HorizontalAlignment="Right"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Экспорт данных о покупках">
            
        </GroupBox>
        <Button x:Name="btnClose" Content="Закрыть" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,5,5,0" Click="On_btnClose_Click"/>
        
    </StackPanel>
</Window>
