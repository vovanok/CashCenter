<UserControl x:Class="CashCenter.IvEnergySales.DepartmentSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CashCenter.IvEnergySales"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label x:Name="lblRegionName" Grid.Column="0" Grid.Row="0"/>
        <ComboBox x:Name="cbDepartmentSelector" Grid.Column="0" Grid.Row="1" IsReadOnly="True" DisplayMemberPath="DepartmentFullName" SelectedValuePath="Department" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
    </Grid>
</UserControl>
