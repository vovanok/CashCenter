<UserControl x:Class="CashCenter.IvEnergySales.DepartmentSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CashCenter.IvEnergySales"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid>
        <ComboBox x:Name="cbDepartmentSelector" IsReadOnly="True" DisplayMemberPath="DepartmentFullName" SelectedValuePath="Department" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
        <Label x:Name="lblErrorMessage" />
    </Grid>
</UserControl>
